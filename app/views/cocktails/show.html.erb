<h1><%= @cocktail.name %></h1>
<%= cl_image_tag(@cocktail.photo.key,
      width: 400, height: 300, crop: :fill) %>
<p>Ingredients</p>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li><%= "#{dose.description} - #{dose.ingredient.name}" %><%= link_to 'Destroy', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %></li>
  <% end %>
</ul>


<ul>
  <% @cocktail.reviews.each do |review| %>
  <li><%= "#{review.content}" %></li>
  <% end %>
</ul>


<p><%= link_to 'Back', root_path %></p>
<p><%= link_to 'Leave a review', new_cocktail_review_path(@cocktail) %></p>

<%= render "doses/new", cocktail: @cocktail, dose: @dose %>
<%= render "reviews/new", cocktail: @cocktail, review: @review %>
